{% extends "base.html.twig" %}

{% block title %}Backoffice | Contact
{% endblock %}

{% block body %}

	<h1 class="display-4 text-center my-4">

		{% if editMode %}
			BACKOFFICE | Edition du contact
		{% else %}
			BACKOFFICE | Création du contact
		{% endif %}

	</h1>

	{{ form_start(form) }}

	{{ form_row(form.firstname, {
    'label': 'Prénom'
    }) }}

	{{ form_row(form.lastname,{
		'label': 'Nom'
	}) }}

	{{ form_row(form.email,{
        'label': 'Adresse mail'
    }) }}

	{{ form_row(form.message) }}

	<button class="btn btn-primary my-2">
		{% if editMode %}
			Enregister les modifications
		{% else %}
			Crée le contact
		{% endif %}

	</button>

	{{ form_end(form) }}

{% endblock %}

